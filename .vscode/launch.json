{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Styleguide (Web)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/flutter_styleguide",
      "program": "lib/main.dart",
      "args": [
        "--web-port=8888",
        "-d",
        "chrome",
        "--web-experimental-hot-reload",
      ],
      "console": "terminal"
    },
    {
      "name": "[DEV] Main App (Web)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}",
      "program": "lib/main.dart",
      "args": [
        "--web-port=8081",
        "-d",
        "chrome",
        "--web-experimental-hot-reload",
        "--dart-define-from-file=app_config_dev.json"
      ],
      "console": "terminal"
    },
    {
      "name": "[PROD] Main App (Web)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}",
      "program": "lib/main.dart",
      "args": [
        "--web-port=8081",
        "-d",
        "chrome",
        "--web-experimental-hot-reload",
        "--dart-define-from-file=app_config_prod.json"
      ],
      "console": "terminal"
    },
    {
      "name": "Flutter Styleguide (macOS)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/flutter_styleguide",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "macos"
      ],
      "console": "terminal"
    },
    {
      "name": "[DEV] Main App (macOS)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "macos",
        "--dart-define-from-file=app_config_dev.json"
      ],
      "console": "terminal"
    },
    {
      "name": "[PROD] Main App (macOS)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "macos",
        "--dart-define-from-file=app_config_prod.json"
      ],
      "console": "terminal"
    },
    {
      "name": "Build Styleguide Web Production SPA",
      "type": "node-terminal",
      "request": "launch",
      "command": "flutter build web --release --csp --source-maps --tree-shake-icons --optimization-level=4 --pwa-strategy=offline-first",
      "cwd": "${workspaceFolder}/flutter_styleguide"
    },
    {
      "name": "Build Main App Web Production SPA",
      "type": "node-terminal",
      "request": "launch",
      "command": "flutter build web --release --csp --source-maps --tree-shake-icons --optimization-level=4 --pwa-strategy=offline-first",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Build Main App macOS Production",
      "type": "node-terminal",
      "request": "launch",
      "command": "flutter build macos --release --dart-define-from-file=app_config_prod.json",
      "cwd": "${workspaceFolder}"
    }
  ]
}